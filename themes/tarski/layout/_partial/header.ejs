<header class="header">
    <div class="header-imag">
        <img src="../images/mountain.jpg">
    </div>

    <div id="title">
        <h1 id="blog-title">
            <a><%= config.title %></a>
        </h1>

        <% if (config.subtitle){ %>
            <p id="tagline">
                <%= config.subtitle %>
            </p>
        <% } %>
    </div>

    <div id="navigation">
        <ul id="nav-1">
            <% for (name in theme.menu) {%>
            <li class="menu-item">
                <a href="<%- url_for(theme.menu[name]) %>" class="menu-item-link"><%= name %></a>
            </li>
        <% } %>
        </ul>
        <ul id="nav-2">
            <li>
                <a class="feed" title="Subscribe to feed">Subscribe</a>
            </li>
        </ul>
        <div class="clearfix"></div>
    </div>
    <div class="clearfix"></div>
</header>